<body id="common-image">

<section class="slice slice-lg sct-color-1">
  <div class="container devise">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="form-heading">
          <h2>- Please change your password -</h2>
        </div>
      <!--入力フォーム  -->
        <div class="form-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%#↑のコードとどちらか= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group has-icon">
              <!-- <%#= f.label :メールアドレス %><br /> -->
              <%#= f.email_field :email, autofocus: true, autocomplete: "email" %>
              <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"登録済みメールアドレス"%>
            </div>
          <!-- パスワード再設定 -->
            <div class="form-group has-icon">
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_password %></div>
              <% end %>
                <label class="control-label sr-only" for="inputEmail">Password</label>
                <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード(6文字以上)" %>
                  <% if @minimum_password_length %>
                    <em><%= @minimum_password_length %></em>
                  <% end %>
            </div>
            <!-- パスワード確認 -->
            <div class="form-group has-icon">
              <label class="control-label sr-only" for="inputEmail">Password</label>
              <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword", placeholder:"パスワード確認" %>
            </div>
            <%= f.submit "Change my password", class:"btn btn-block btn-base-1 mt-20" %>
          <% end %>

          <div class="form-footer">
            <%= render "devise/shared/links" %>
            <%= link_to "<< Back", root_path, class: "style-change" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

</body>

