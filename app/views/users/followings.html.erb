<%= render 'users/header' %>

<div class="container" id="users-container">
	<div class="row">
		<div class="col-md-offset-3 col-md-6 col-md-offset-3 ">
			<h3>フォロー中</h3>
				<div class="common-relationship-box">
					<table class="following-user-list">
            <% @user.followings.each do |following| %>
              <tr>
              	<td>
	                <%= link_to user_path(following) do %>
	                <%= attachment_image_tag current_user.following, :profile_image, size:'50x50', format: 'jpeg', fallback: 'no_image.jpg', class: "img-circle pull-left profile-thumb" %>
                 	<% end %>
              	</td>
              	<td>
                	<%= following.name %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
    </div>
  </div>
</div>
