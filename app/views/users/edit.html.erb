<%= render 'users/header' %>

<div class="container">
	<div class="row">
		<div class="col-md-offset-3 col-md-6 col-md-offset-3 ">
			<div class="common-user-box">
				<div class="edit-form">
				  <%= form_for(@user) do |f| %>
						<table>
							<tr>
								<th><%= attachment_image_tag @user, :profile_image, size:'60x60', format: 'jpeg', fallback: 'no_image.jpg', class: " img-circle pull-left profile-thumb" %></th>
								<td><h2><%= @user.name %><h2></td>
							</tr>
							<tr>
								<th>ユーザネーム</th>
								<td><label for="user_name"></label>
										<%= f.text_field :name %>
								</td>
							</tr>
							<tr>
								<th>自己紹介</th>
								<td><label for="user_introduction"></label>
										<%= f.text_area :introduction, :size=>"35x3" %>
								</td>
							</tr>
							<tr>
								<th>メールアドレス</th>
								<td><label for="email"></label>
										<%= f.text_field :email, :size=>"40x2" %>
										<p>⚠︎メールアドレスはプロフィールには公開されません</p>
								</td>
							</tr>
							<tr>
								<th>パスワード</th>
								<td>現在のパスワード<label for="encrypted_password"></label><br>
										新しいパスワード
										<%= f.text_field :reset_password_token, :size=>"25x2" %>
										<p>⚠︎パスワードはプロフィールには公開されません</p>
								</td>
							</tr>
							<tr>
								<th>プロフィール写真</th>
								<td><label for="user_profile_image"></label>
										<%= f.attachment_field :profile_image %>
								</td>
							</tr>
						</table>

							<%= f.submit "送信する", class: "btn btn-primary submit" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>




