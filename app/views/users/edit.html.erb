<%= render 'users/header' %>

<div class="container">
	<div class="row">
		<div class="col-md-offset-3 col-md-6 col-md-offset-3 ">
			<div class="common-user-box">
				<div class="edit-form">
				  <%= form_for(@user) do |f| %>
						<table>
							<tr height="100">
								<th class="image"><%= attachment_image_tag @user, :profile_image, size:'70x70', format: 'jpeg', fallback: 'no_image.jpg', class: " img-circle pull-left profile-thumb" %></th>
								<td><h2><%= @user.name %><h2></td>
							</tr>
							<!-- 以下余白間隔調整のため個別にheight設定 -->
							<%#= render "devise/shared/error_messages", resource: resource %>
							<tr height="50">
								<th>ユーザネーム</th>
								<td><label for="user_name"></label>
										<%= f.text_field :name %>
								</td>
							</tr>
							<tr height="90">
								<th>自己紹介</th>
								<td><label for="user_introduction"></label>
										<%= f.text_area :introduction, :size=>"35x3" %>
								</td>
							</tr>
							<tr height="70">
								<th>メールアドレス</th>
								<td><label for="email"></label>
										<%= f.text_field :email, :size=>"40x2" %>
										<p>⚠︎メールアドレスはプロフィールには公開されません</p>
								</td>
							</tr>
							<tr height="120">
								<th>パスワード変更<br />
										<p>(6文字以上)</p>
								</th>
								<td><li>現在のパスワード
	  									<label class="control-label sr-only" for="inputEmail"></label>
	    									<%= f.password_field :current_password, autocomplete: "current-password" %>
	    							</li>
	    							<li>新しいパスワード
											<label class="control-label sr-only" for="inputEmail"></label>
	  										<%= f.password_field :password, autofocus: true, autocomplete: "new-password" %><br />
	    										<% if @minimum_password_length %><br />
	      										<em><%= @minimum_password_length %>文字以上</em>
	    										<% end %>
	    							</li>
										<li>確認用
											<label class="control-label sr-only" for="inputEmail"></label>
												<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
												<p>⚠︎パスワードはプロフィールには公開されません</p>
										</li>
								</td>
							</tr>
							<tr height="60">
								<th>プロフィール写真</th>
								<td><%= f.attachment_field :profile_image %></td>
							</tr>
						</table>
							<%= f.submit "送信する", class: "btn btn-primary submit", "data-confirm" => "この内容で変更しますか?" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>














