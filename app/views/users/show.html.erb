<%= render 'users/header' %>

<div class="container">
	<div class="row">
		<div class="page-left">
			<div class="user-image col-md-1">
				<%= attachment_image_tag @user, :profile_image, size:"130x130", class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
			</div>
			<div class="col-md-5">
				<div class="user-data">
					<div class="user-profile">
						<ul>
							<li>
							  <h1><%= @user.name %></h1>
							</li>
						  	<li>
						  		<!-- テストユーザで表示確認 -->
						      <% if @user.id == current_user.id %>
							    	<%= link_to "プロフィール編集", edit_user_path(current_user), class: "btn btn-default" %>
							  	<% elsif @user == current_user.following?(@user) %>
		    						<%= link_to "フォロー中", class: "btn btn-primary" %>
		  					  <% else %>
		    					  <%= link_to "フォローする", user_create_relation_path(@user_id), method: :post, class: "btn btn-primary" %>
		  					  <% end %>
						    </li>
						</ul>
					</div>
					<div class="relationships-count">
						<ul>
						  <li>投稿<%= @user.blogs.count %>件</li>
						  <li><%= link_to "フォロー中#{@user.followings.count}人", users_followings_path %></li>
						  <li><%= link_to "フォロワー#{@user.followeds.count}人", users_followeds_path %></li>
						</ul>
					</div>
					<div class="user-introduction">
						<%= @user.introduction %>
					</div>
					<div class="user-wirhdraw">
						<% if @user.id == current_user.id %>
							<%= link_to "退会する", user_registration_path, method: :delete, class: "btn btn-danger", "data-confirm" => "本当に退会しますか？" %>
						<% end %>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-offset-1 col-md-5">
			<div class="blogs-by-user">
				<%#= @blogs.each do |blog| %>
        <%# end %>
				<!-- user indexのブログ一覧とほぼ共通フォーマット -->
			</div>
		</div>
	</div>
</div>





