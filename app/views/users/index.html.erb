<%= render 'users/header' %>
<div class="container">
    <!-- <main class="clearfix"> -->
        <div class="row">
            <!-- 新着blog表示 -->
            <div class="col-md-offset-1 col-md-6">
                <div class="newly-arriving-blog">
                    <% @blogs.each do |blog| %>
                        <div class="blog-box">
                            <!-- <section class="blog-item clearfix"> -->
                                <div class="blog-headline">
                                    <%= link_to(blog.user) do %>
                                        <%= attachment_image_tag blog.user, :profile_image, size:'60x60', format: 'jpeg', fallback: 'no_image.jpg', class: "img-circle pull-left profile-thumb" %>
                                        <%= blog.user.name %>
                                    <% end %>
                                </div>
                                <div class="blog-image">
                                    <%= attachment_image_tag blog, :image, size:'100x100', format: 'jpeg', fallback: 'no_image.jpg', size:'100x100' %>
                                </div>
                                <div class="blog-box heading has-icon">
                                    <!-- 追加実装//facebook参考に各iconのカウント数表示 -->
                                    <ul class="blog-icon">
                                        <li>
                                          <%= link_to "", user_favorites_path(current_user), class: "glyphicon glyphicon-heart-empty" %>
                                        </li>
                                        <li>
                                          <%= link_to "", blog_path(blog), class: "far fa-comment" %>
                                        </li>
                                        <!--非同期で色が変わるのみ、そのままBookmark一覧(create)にblogが追加される  -->
                                        <li>
                                          <i class="far fa-bookmark"></i>
                                        </li>
                                    </ul>
                                </div>
                                <div class="blog-body">
                                    <%= blog.body %>
                                </div>
                                <!-- 追加機能//blog投稿日時実装の場合ここに <p class="blog-date">June 17, 2017</p> -->
                                 <!-- 非同期で新規コメント入力機能追加 -->
                                <div class="new-comment-form">
                                    <%= form_for [@blog, @blog_comment] do |f| %>
                                    <%= f.text_area :comment, size: "90x5" %>
                                    <%= f.submit '投稿する' %>
                                    <% end %>
                                </div>
                            <!-- </section> -->
                        </div>
                    <% end %>
                </div>
            </div>
        <!-- side-bar -->
            <div class="col-md-5">
                <div class="sidebar-right">
                    <div class="sidebar-heading">
                        <ul class="current-user-profile">
                          <li class="profile-image-circle">
                            <%= link_to user_path(current_user) do %>
                            <%= attachment_image_tag current_user, :profile_image, size:'75x75', format: 'jpeg', fallback: 'no_image.jpg', class: "img-circle pull-left profile-thumb" %>
                          </li>
                          <li class="">
                            <%= current_user.name %>
                            <% end %>
                          </li>
                        </ul>
                    </div>
                <!-- following_user一覧 -->
                    <div class="relationships-user-list">
                        <div class="user-list-box">
                            <div class="box-heading">
                                <h5>フォロー中</h5>
                                <h5><%= link_to "すべて見る", users_followings_path %></h5>
                            </div>
                            <div class="following-user-list">
                                <ul>
                                  <% @followings.each do |following| %>
                                    <li>
                                      <%= link_to user_path(following) do %>
                                      <%= attachment_image_tag current_user.following, :profile_image, size:'20x20', format: 'jpeg', fallback: 'no_image.jpg', class: "img-circle pull-left profile-thumb" %>
                                      <% end %>
                                    </li>
                                    <li>
                                      <%= current_user.following.name %>
                                    </li>
                                  <% end %>
                                </ul>
                            </div>
                        </div>
                    <!--  followed_user一覧 -->
                        <div class="user-list-box">
                            <div class ="box-heading">
                              <h5>フォロワー</h5>
                              <h5><%= link_to "すべて見る", users_followeds_path %></h5>
                            </div>
                            <div class="followed-user-list">
                                <ul>
                                  <% @followeds.each do |followed| %>
                                    <li>
                                      <%= link_to user_path(followed) do %>
                                      <%= attachment_image_tag current_user.followed, :profile_image, size:'20x20', format: 'jpeg', fallback: 'no_image.jpg', class: "img-circle pull-left profile-thumb" %>
                                      <% end %>
                                    </li>
                                    <li>
                                      <%= current_user.followed.name %>
                                    </li>
                                  <% end %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</div>

