<%= render 'users/header' %>

<main class="clearfix">
    <!-- 新着順に表示 -->
    <div class="newly-arriving-blog">
        <% @blogs.each do |blog| %>
            <div class="blog-box">
                <div class="blog-item clearfix">
                    <div class="blog-headline">
                        <%= attachment_image_tag blog.user, :profile_image, size:'100x100', format: 'jpeg', fallback: 'no_image.jpg', size:'100x100' %>
                        <%= blog.user.name %>
                    </div>
                    <section class="blog-body">
                        <%= attachment_image_tag blog :image, size:'100x100', format: 'jpeg', fallback: 'no_image.jpg', size:'100x100' %>
                        <%= blog.body %>
                    <!-- 追加機能///投稿日時実装の場合ここに-->
                    </section>
                </div>
            </div>
        <% end %>
    </div>

    <div class="sidebar">
        <div class="sidebar-right">
            <ul class="current-user-profile">
                <li>
                  <%= link_to user_path(current_user) do %>
                  <%= attachment_image_tag current_user, :profile_image, size:'50x50', format: 'jpeg', fallback: 'no_image.jpg', class: "img-circle pull-left profile-thumb" %>
                  <% end %>
                </li>
                <li>
                  <%= current_user.name %>
                </li>
            </ul>
        <!-- following_user一覧 -->
            <section class="list-box">
                <div crass="following-user-list">
                    <ul class ="list-heading">
                        <li>フォロー中</li>
                        <li><%= link_to "すべて見る", relationships_following_path %></li>
                    </ul>
                    <% @followings.each do |following| %>
                        <ul>
                            <li>
                              <%= link_to user_path(following) do %>
                              <%= attachment_image_tag current_user.following, :profile_image, size:'50x50', format: 'jpeg', fallback: 'no_image.jpg', class: "img-circle pull-left profile-thumb" %>
                              <% end %>
                            </li>
                            <li>
                              <%= current_user.following.name %>
                            </li>
                        </ul>
                    <% end %>
                </div>
            </section>
        <!-- followed_user一覧 -->
            <div crass="user-list">
                <section class="list-box">
                    <ul class ="list-heading">
                        <li>フォロワー</li>
                        <li><%= link_to "すべて見る", relationships_followed_path %></li>
                    </ul>
                    <% @followeds.each do |followed| %>
                        <ul>
                            <li>
                              <%= link_to user_path(followed) do %>
                              <%= attachment_image_tag current_user.followed, :profile_mage, size:'50x50', format: 'jpeg', fallback: 'no_image.jpg', class: "img-circle pull-left profile-thumb" %>
                              <% end %>
                            </li>
                            <li>
                              <%= current_user.followed_user.name %>
                            </li>
                        </ul>
                    <% end %>
                </section>
            </div>
        </div>
    </div>
</main>

