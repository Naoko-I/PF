<div class="col-md-12 slide-wrap">
  <% @blogs.each do |blog| %>
    <article class="new-arriving-blog slide" >
      <div class="article-header">
        <table>
            <tr>
              <td>
                <%= link_to user_path(blog.user.id) do %>
                  <%= attachment_image_tag blog.user, :profile_image, size:'50x50', format: 'jpeg', fallback: 'no_image.jpg', class: "img-circle pull-left profile-thumb" %>
                <% end %>
              </td>
              <td class="user-name"><%= link_to "#{blog.user.name}", user_path(blog.user.id) %></td>
              <td><%= blog.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
            </tr>
        </table>
      </div>

      <div class="blog-main">
        <%= link_to blog_path(blog.id) do %>
          <%= attachment_image_tag blog, :image, size:'480x400' %>
        <% end %><br />
        <%= blog.body %>
      </div>

      <div class="article-footer">
        <div class="blog-icon">
          <% if current_user != blog.user %>
            <% if blog.favorited_by?(current_user) %>
              <%= link_to blog_favorites_path(blog, redirect_id: 0), method: :delete do %>
                <span class="fa fa-heart" style="color: red;"><%= blog.favorites.count%></span>
              <% end %>
            <% else %>
              <%= link_to blog_favorites_path(blog, redirect_id: 0), method: :post do %>
                <span class="fa fa-heart-o"><%= blog.favorites.count %>いいね</span>
              <% end %>
            <% end %>
            <!-- <span class="fa fa-comment"><%= blog.blog_comments.count %>コメント</span> -->
            <%= link_to "#{blog.blog_comments.count} コメント", blog_path(blog.id) %>
          <% end %>
        </div>
        <div class="comments">
          <%#= form_for [@blog, @blog.blog_comments] do |f| %>
            <!-- <div class="col-sm-12"> -->
              <%#= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
            <!-- </div> -->
            <%#= f.submit "投稿する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
          <%# end %>
        </div>
      </div>
    </article>
  <% end %>
</div>